<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="84dp"
        android:text="Registration Form"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/drid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/drid"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Enter Your ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/drname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/drname"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/drphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/drsp"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Enter Your Specialization"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="135dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/drphone"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="Enter Your Contact No"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/drsp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>